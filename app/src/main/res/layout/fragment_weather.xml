        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivWeatherNightIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_moon"
        app:layout_constraintBottom_toBottomOf="@+id/ivWeatherDayIcon"
        app:layout_constraintEnd_toEndOf="@+id/cvWeatherFirstDay"
        app:layout_constraintTop_toTopOf="@+id/ivWeatherDayIcon" />

    <androidx.cardview.widget.CardView
