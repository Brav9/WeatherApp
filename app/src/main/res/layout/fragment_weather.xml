                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="120dp"
                android:src="@drawable/ic_cloudy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvFirstNightTemperature"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivWeatherDayIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_sun"
        app:layout_constraintBottom_toBottomOf="@+id/tvSevenDayForecast"
        app:layout_constraintEnd_toStartOf="@+id/ivWeatherNightIcon"
        app:layout_constraintTop_toTopOf="@+id/tvSevenDayForecast" />

