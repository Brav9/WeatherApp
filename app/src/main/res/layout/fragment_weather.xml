<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WeatherFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWeatherOfToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="City"
                android:textSize="64sp"
                app:layout_constraintEnd_toStartOf="@+id/ivUpdateDate"
                app:layout_constraintStart_toEndOf="@+id/ivChooseACityIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/tvMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Утром"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tvDaytime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescriptionOfTheWeather"
                app:textAllCaps="false" />

            <TextView
                android:id="@+id/tvMorningTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="+6"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ivMorningWeatherIcon"
                app:layout_constraintStart_toStartOf="@+id/ivMorningWeatherIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivMorningWeatherIcon" />

            <ImageView
                android:id="@+id/ivChooseACityIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@+id/tvCityTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCityTitle" />

            <ImageView
                android:id="@+id/ivEveningWeatherIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_cloudy"
                app:layout_constraintEnd_toEndOf="@+id/tvEvening"
                app:layout_constraintStart_toStartOf="@+id/tvEvening"
                app:layout_constraintTop_toBottomOf="@+id/tvEvening" />

            <ImageView
                android:id="@+id/ivUpdateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_sync"
                app:layout_constraintBottom_toBottomOf="@+id/tvCityTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCityTitle" />

            <TextView
                android:id="@+id/tvEveningtemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="+8"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ivEveningWeatherIcon"
                app:layout_constraintStart_toStartOf="@+id/ivEveningWeatherIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivEveningWeatherIcon" />

            <TextView
                android:id="@+id/tvDaytimeTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="+12"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ivDaytimeWeatherIcon"
                app:layout_constraintStart_toStartOf="@+id/ivDaytimeWeatherIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivDaytimeWeatherIcon" />

            <TextView
                android:id="@+id/tvNightTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="+4"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ivNightWeatherIcon"
                app:layout_constraintStart_toStartOf="@+id/ivNightWeatherIcon"
                app:layout_constraintTop_toBottomOf="@+id/ivNightWeatherIcon" />

            <TextView
                android:id="@+id/tvNight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ночью"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvEvening"
                app:layout_constraintTop_toBottomOf="@+id/tvDescriptionOfTheWeather" />

            <ImageView
                android:id="@+id/ivDaytimeWeatherIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_cloudy"
                app:layout_constraintEnd_toEndOf="@+id/tvDaytime"
                app:layout_constraintStart_toStartOf="@+id/tvDaytime"
                app:layout_constraintTop_toBottomOf="@+id/tvDaytime" />

            <ImageView
                android:id="@+id/ivNightWeatherIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_moon"
                app:layout_constraintEnd_toEndOf="@+id/tvNight"
                app:layout_constraintStart_toStartOf="@+id/tvNight"
                app:layout_constraintTop_toBottomOf="@+id/tvNight" />

            <TextView
                android:id="@+id/tvDaytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Днем"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tvEvening"
                app:layout_constraintStart_toEndOf="@+id/tvMorning"
                app:layout_constraintTop_toBottomOf="@+id/tvDescriptionOfTheWeather" />

            <ImageView
                android:id="@+id/ivMorningWeatherIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sun"
                app:layout_constraintEnd_toEndOf="@+id/tvMorning"
                app:layout_constraintStart_toStartOf="@+id/tvMorning"
                app:layout_constraintTop_toBottomOf="@+id/tvMorning" />

            <TextView
                android:id="@+id/tvEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Вечером"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/tvNight"
                app:layout_constraintStart_toEndOf="@+id/tvDaytime"
                app:layout_constraintTop_toBottomOf="@+id/tvDescriptionOfTheWeather" />

            <TextView
                android:id="@+id/tvTemperatureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+12"
                android:textSize="48sp"
                app:layout_constraintEnd_toStartOf="@+id/ivWeatherIcon"
                app:layout_constraintStart_toStartOf="@+id/tvCityTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvCityTitle" />

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="80dp"
                android:layout_height="80dp
"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_sun"
                app:layout_constraintBottom_toBottomOf="@+id/tvTemperatureTitle"
                app:layout_constraintEnd_toEndOf="@+id/tvCityTitle"
                app:layout_constraintStart_toEndOf="@+id/tvTemperatureTitle"
                app:layout_constraintTop_toTopOf="@+id/tvTemperatureTitle" />

            <TextView
                android:id="@+id/tvDescriptionOfTheWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пасмурно"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="@+id/tvCityTitle"
                app:layout_constraintStart_toStartOf="@+id/tvCityTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvTemperatureTitle" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
